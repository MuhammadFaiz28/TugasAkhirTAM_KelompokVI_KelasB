<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.tugasakhirtam">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TugasAkhirTAM">
        <activity
            android:name=".Announcement.AnnouncementActivity"
            android:exported="false" />
        <activity
            android:name=".ListActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Announcement.EntertaimentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Announcement.HealthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Announcement.BusinessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Announcement.TechnologyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Announcement.HeadLineActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Announcement.SportsNewsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Announcement.OpenNewsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>